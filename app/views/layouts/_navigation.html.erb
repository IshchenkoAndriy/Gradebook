<div class="c_3 logo"><%= link_to t(:app_logo), root_path %></div>
<div class="c_9 navigation"><ul>
  <% if can? :read, Article %>
	<li>
	<%= link_to(t(:news), articles_path) %>
	</li>
  <% end %>
</ul>

<ul class="pull-right">
  <% if user_signed_in? %>
    <li>
    <span> <%= t :wellcome %> <br> <%= current_user.email  %></span>  
    </li>
	<li>
    <%= link_to(t(:logout), destroy_user_session_path, :method=>'delete') %>        
    </li>
	<li>
    <%= link_to(t(:edit_account), edit_user_registration_path) %>
    </li>
  <% else %>
    <li>
    <%= link_to(t(:login), new_user_session_path)  %>  
    </li>
	<li>
    <%= link_to(t(:sign_up), new_user_registration_path)  %>
    </li>
  <% end %>
    <li id="lang">
	<% case I18n.locale %>
	<% when :uk %>
	<%= link_to "", "#", :id => :uk, :class => "lang_popover", 
		"data-original-title" => t(:select_lang),
		:rel => "popover",
		"data-content" => "<ul role='menu'>" +
							"<li>#{ link_to 'ru', url_for(:locale => :ru), :id => :ru }</li>" +
							"<li>#{ link_to 'en', url_for(:locale => :en), :id => :en }</li>" +
							"</ul>"
	%>
	<% when :ru %>
	<%= link_to "", "#", :id => :ru, :class => "lang_popover", 
		"data-original-title" => t(:select_lang),
		:rel => "popover",
		"data-content" => "<ul role='menu'>" +
							"<li>#{ link_to 'uk', url_for(:locale => :uk), :id => :uk }</li>" +
							"<li>#{ link_to 'en', url_for(:locale => :en), :id => :en }</li>" +
							"</ul>"
	%>
	
	<% when :en %>
  	<%= link_to "", "#", :id => :en, :class => "lang_popover", 
		"data-original-title" => t(:select_lang),
		:rel => "popover",
		"data-content" => "<ul role='menu'>" +
							"<li>#{ link_to "uk", url_for(:locale => :uk), :id => :uk }</li>" +
							"<li>#{ link_to 'ru', url_for(:locale => :ru), :id => :ru }</li>" +
							"</ul>"
	%>
  	<% end %>
	</li>
</ul>
</div>