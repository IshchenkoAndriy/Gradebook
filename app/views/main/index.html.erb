<div id="wrapper">
    <div class="row">
		<div class="">
            <%= nivo_slider id: 'feature_slider' do %>
                <%= image_tag "slides/slide-1.jpg" %>
                <%= image_tag "slides/slide-2.jpg" %>
            <% end %>
        </div>
    </div>
	
	
	
	<div class="row">
		<div class="g_6">
			<% if user_signed_in? %>
				<span> Settings </span>
			<% else %>
				<%= render 'main/signin' %>
			<% end %>
		</div>
		<div class="g_6">
			<table class="table">
			<% @articles.each do |article| %>
			  <tr>
			    <td><%= article.user.email %></td>
			    
			    <% if can? :read, article %>
			    	<td><%= link_to article.title, article %></td>
			   	<% else %>
			   		<td><%= article.title %></td>
			    <% end %>
			    <td><%=  raw truncate(article.text, :length => 40) %></td>
			  </tr>
			<% end %>
			</table>
		</div>
	</div>
</div>