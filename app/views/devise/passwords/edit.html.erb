<h2><%= t 'devise.change_pass.title' %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, :label => t('devise.change_pass.new_pass'), :required => true %>
    <%= f.input :password_confirmation, :label => t('devise.change_pass.confirm_pass'), :required => true %>
  </div>

    <%= f.button :submit, t('devise.change_pass.submit'), :class => 'btn-primary controls' %>
<% end %>

<%= render "devise/shared/links" %>
