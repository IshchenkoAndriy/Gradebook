<h2><%= t('devise.edit.title') %></h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <%= f.input :email, :autofocus => true, :required => true %>
  <%= f.input :password, :autocomplete => "off", :hint => t('devise.edit.pass_hint'), :required => false %>
  <%= f.input :password_confirmation, :required => false %>
  <%= f.input :current_password, :hint => t('devise.edit.current_pass_hint'), :required => true %>
  <%= f.button :submit, t('devise.edit.submit'), :class => 'btn-primary controls' %>
<% end %>
<h3><%= t 'devise.edit.cancel_acc' %></h3>
<p><%= t 'devise.edit.unhappy' %> <%= link_to t('devise.edit.cancel_acc'), registration_path(resource_name), :data => { :confirm => t('devise.edit.destroy_confirm') }, :method => :delete %>.</p>
<%= link_to t('devise.back'), :back %>