- breadcrumb :study_group_students, @study_group

- if @group_double_classes.nil? or @group_double_classes.empty?
  = render 'application/breadcrumb', breadcrumb_wrapper_class: ''
- else
  .row
    = render 'application/breadcrumb', breadcrumb_wrapper_class: 'g_9'
    .g_3
      .btn-group.pull-right{:id => :double_classes_dropdown}
        %button.btn.dropdown-toggle{:id => :double_classes_dropdown, 'data-toggle' => 'dropdown'}
          - if @choosed_double_class.nil?
            = I18n.t('subjects_title')
          - else
            = @choosed_double_class.subject.name
          %span.caret
        %ul.dropdown-menu
          - @group_double_classes.each do |double_class|
            %li= link_to '%s | %s' % [ double_class.double_class_type.name, double_class.subject.name],
                  url_for( semester_group_students_path(@semester, @study_group, :double_class_id => double_class.id) )

- if @choosed_double_class.nil?
  .row
    .well.g_3
      = render_navigation do |primary|
        - @recent_semesters.each do |semester|
          - primary.item :semester, semester.name, semester_groups_path(semester) do |semester_subitem|
            - semester.study_groups.each do |study_group|
              - semester_subitem.item :group, study_group.name, semester_group_students_path(semester, study_group), :highlights_on => /groups\/#{study_group.id}/
            - semester_subitem.dom_class = 'nav nav-list'
        - primary.dom_class = 'nav nav-list'

    .g_9
      %table.table.table-hover.students_table
        - unless @choosed_double_class.nil?
          %th= I18n.t('students_title')
        - @students_in_group.each do |student_in_group|
          %tr
            %td= link_to student_in_group.full_name, url_for( semester_group_student_path(@semester, @study_group, student_in_group) )
- else
  %h2.horizontal_centered= @choosed_double_class.subject.name
  %h4= @choosed_double_class.double_class_type.name
  %h4= @choosed_double_class.teacher.full_name

  %div
    %table.table.names
      %tr
        %th.header_height.horizontal_centered.centered_cell= I18n.t('students_title')
      - @students_in_group.each do |student_in_group|
        %tr
          %td.row_height.horizontal_centered.centered_cell= link_to student_in_group.full_name, url_for( semester_group_student_path(@semester, @study_group, student_in_group) )

    %table.table.marks_table
      %tr
        - unless @choosed_double_class.nil?
          - @choosed_double_class.lessons.each do |lesson|
            %th.header_height.horizontal_centered.centered_cell= '%s %s' % [@choosed_double_class.double_class_type.name, lesson.description]
      - @students_in_group.each do |student_in_group|
        %tr
          - unless @choosed_double_class.nil?
            - @choosed_double_class.lessons.each do |lesson|
              - student_mark = lesson.lesson_marks.find_by_student_id(student_in_group.student_id)
              - student_presence = lesson.presences.find_by_student_id(student_in_group.student_id)
              %td.row_height.horizontal_centered.centered_cell
                = student_mark.score unless student_mark.nil?
                - unless student_presence.nil?
                  - if student_presence.was_present
                    %span.badge.badge-success= t('presence_states.present_title')
                  - else
                    %span.badge.badge-important= t('presence_states.absent_title')