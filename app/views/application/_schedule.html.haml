  %table
    - ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'].each do |day_name|
      %th= day_name
    - (1..6).each do |double_class|
      %tr
        - (1..5).each do |day|
          - day_schedule = schedule_for_schedule_cell(day, double_class, @schedule)
          %td.schedule_general_table_wrapper
            %table.schedule_general_table
              - count_rows = get_count_rows(day_schedule)
              - count_columns = get_count_columns(day_schedule)
              - if count_rows == 0 and count_columns == 0
                %td.schedule_cell= '-'
              - elsif count_rows == 1 and count_columns == 1
                %td.schedule_cell= '+'
              - elsif count_rows == 1
                %tr
                  - (1..get_count_columns(day_schedule)).each do |column_index|
                    %td
                      %table.schedule_nested_table
                        - (1..get_count_rows_for_column(column_index, day_schedule)).each do |row_index|
                          %tr
                            %td.schedule_cell= get_rows_for_column(column_index, row_index, day_schedule)

              - elsif count_columns == 1
                - (1..get_count_rows(day_schedule)).each do |row_index|
                  %tr
                    %td
                      %table.schedule_nested_table
                        %tr
                          - (1..get_count_columns_for_row(row_index, day_schedule)).each do |column_index|
                            %td.schedule_cell= get_columns_for_row(column_index, row_index, day_schedule)

              - else
                - (1..get_count_rows(day_schedule)).each do |row_index|
                  %tr
                    - (1..get_count_columns(day_schedule)).each do |column_index|
                      %td.schedule_cell= get_columns_for_row(column_index, row_index, day_schedule).to_s



